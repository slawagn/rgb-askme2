<% background_class = "users-box-user-bg#{ user.id % 5 }" %>
<% nickname_letter = user.nickname.first.upcase %>

<div class='users-box-user <%= background_class %> rounded mr ml'>
  <a href='<%= user_path(user.nickname) %>'>
    <h1 class="title-lg text-bold">
      <%= image_tag user.gravatar_url,
        title: nickname_for_display(user.nickname),
        class: 'rounded' %>
    </h1>
  </a>
</div>
